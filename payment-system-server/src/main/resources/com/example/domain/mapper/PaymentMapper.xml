<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.domain.mapper.PaymentMapper">
    <select id="findByQueryInfo" parameterType="QueryInfo" resultType="PaymentInfoDB">
        SELECT
        	* 
        FROM 
        	payment
        <where>
        	<if test="queryInfo.payDate != null">
        		AND pay_date = #{queryInfo.payDate}
        	</if>
        	<if test="queryInfo.itemId != null">
        		AND item_id = #{queryInfo.itemId}
        	</if>
        </where> 
        ORDER BY 
        	pay_date DESC
    </select>
</mapper>